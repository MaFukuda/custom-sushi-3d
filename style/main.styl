body
  // background-color #444
  background-color #eee

#app
  margin-top 20px
  > div
    // background-color #eee
    // box-shadow 0 2px 30px 0 rgba(0, 0, 0, 0.6)
    margin 0 auto

#customize
  display flex
  justify-content center
  margin-bottom 100px

  .section-wrap
    box-sizing border-box
    background-color #fff
    padding 30px 50px 5px 30px
    box-shadow 0 3px 40px 0 rgba(0, 0, 0, 0.4)

    .section
      display flex
      margin-bottom 25px

    .section-hr
      display flex

  .label
    font-size 14px
    color #888
    width 120px
    text-align right
    margin-right 10px

  .picker-wrap
    position relative

    .picker
      position absolute
      left 10px
      top 0

  .color
    margin-top -5px
    width 30px
    height 30px
    border-radius 5px

  .number
    margin-top -5px
    height 30px
    width 60px
    border-radius 5px
    border none
    box-sizing border-box
    padding 0 7px
    color #444
    background-color rgba(0, 0, 0, 0.1)

  .slider
    margin-left 10px

