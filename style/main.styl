@import 'style/input'

body
  // background-color #444
  background-color #eee
  font-family 'Nunito', sans-serif
  font-weight 400
  visibility hidden
  opacity 0

#app
  margin-top 20px
  > div
    // background-color #eee
    // box-shadow 0 2px 30px 0 rgba(0, 0, 0, 0.6)
    margin 0 auto

#customize
  display flex
  justify-content center
  margin-bottom 100px
  margin-top 10px

  .section-wrap
    box-sizing border-box
    background-color #fff
    padding 40px 60px 15px 55px
    box-shadow 0 3px 40px 0 rgba(0, 0, 0, 0.4)

    .section
      display flex
      margin-bottom 25px

    .section-hr
      display flex
      justify-content space-around

  .section-title
    font-size 16px
    font-weight 900
    margin-bottom 20px
    text-align center
    color #666

    &:not(:first-child)
      margin-top 10px

  .label
    font-size 14px
    color #888
    width 60px
    text-align right
    margin-right 10px

  .picker-wrap
    position relative

    .picker
      position absolute
      left 15px
      top -5px;

  .color
    margin-top -5px
    width 30px
    height 30px
    border-radius 5px
    transition .3s ease-in-out

    &:hover
      box-shadow 0 1px 10px 0 rgba(0, 0, 0, 0.5)

    &.active
      box-shadow 0 1px 10px 0 rgba(0, 0, 0, 0.5)
      transform scale(1.2);

  .number
    input-text()
    margin-top -7px
    width 60px

  .slider
    input-range()
    margin-left 10px
    margin-top 8px
    width 100px

#debug
  box-sizing border-box
  padding 10px 0
  font-size 13px
  color #aaa
  width 80px
  float right
  text-align center
  transition .3s ease-in-out
  cursor pointer

  &:hover
    background-color rgba(0, 0, 0, 0.05)

  &:active
    opacity 0.7

label-pop-delta = 10px

#twitter
  margin 10px 0 30px
  display flex
  justify-content center
  position relative
  cursor default
  user-select none

  .button
    display block
    cursor pointer
    background-image url('../assets/twitter.svg')
    background-size contain
    width 20px
    height 20px
    opacity 0.4
    transition .3s ease-in-out

    &:hover
      opacity 0.7
      transform scale(1.2)

    &:active
      opacity 0.6
      transform scale(1.1)

  .label
    background-color #555
    box-shadow 0 1px 4px 0 rgba(0, 0, 0, 0.5)
    position absolute
    left calc(50% + 25px)
    top -5px
    font-size 14px
    color rgba(255, 255, 255, 0.6);
    padding 5px 12px 4px
    font-weight 900
    border-radius 2px
    animation-name pop
    animation-duration 1s
    animation-iteration-count infinite

    &::before
      content ''
      position absolute
      left -3px
      top 11px
      display block
      transform rotate(45deg)
      height 7px
      width 7px
      background-color #555
      box-shadow 0 1px 4px 0 rgba(0, 0, 0, 0.5)

@keyframes pop
  0%
    animation-timing-function ease-out
    left calc(50% + 25px)
  50%
    animation-timing-function ease-in
    left 'calc(50% + 25px + %s)' % label-pop-delta
  to
    left calc(50% + 25px)

